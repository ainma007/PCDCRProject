@model int



@(Html.Kendo().DropDownListFor(m => m)
          .HtmlAttributes(new { style = "width: 100%;" })
          .DataTextField("ProjectName")
          .DataValueField("ProjectID")
          .Filter("contains")
          .DataSource(source =>
          {
              source.Read(read =>
              {
                  read.Action("GetProject", "Project");
              })
              .ServerFiltering(false);
          })
)
@Html.ValidationMessageFor(m => m)

