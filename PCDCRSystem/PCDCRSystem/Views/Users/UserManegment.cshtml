@using PCDCRSystem.Models
@{
    ViewBag.Title = "UserManegment";
}

<div class="page-title">
    <i class="icon-custom-left"></i>
    <h3>إدارة - <span class="semi-bold">المشاريع</span></h3>
</div>

@(Html.Kendo().Grid<UserViewModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.UserID).Width(50).Hidden().HeaderHtmlAttributes(new { @title = "ProductID" }).Width(100);
        columns.Bound(p => p.FullName).Width(100).HeaderHtmlAttributes(new { @title = "اسم المشروع" }).Width(100);
        columns.Bound(p => p.Username).Width(100).HeaderHtmlAttributes(new { @title = "تاريخ البداية" }).Width(100);
        columns.Bound(p => p.Password).Width(100).HeaderHtmlAttributes(new { @title = "تاريخ النهاية" }).Width(100);
        columns.Bound(p => p.UserType).Width(50).HeaderHtmlAttributes(new { @title = "الحالة" }).Width(100);

        columns.Bound(p => p.UserPhone).Width(50).HeaderHtmlAttributes(new { @title = "الحالة" }).Width(100);

        columns.Bound(p => p.UserAddress).Width(50).HeaderHtmlAttributes(new { @title = "الحالة" }).Width(100);

        columns.Bound(p => p.userstatus).Width(50).HeaderHtmlAttributes(new { @title = "الحالة" }).Width(100);

        columns.Command(command => { command.Edit(); command.Destroy(); }).Width(100);
    })
    .ToolBar(toolBar =>
    {
        toolBar.Create();
    })
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
           .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
    .HtmlAttributes(new { style = "height:550px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(false)
        .Events(events => events.Error("errorHandler"))
        .Model(model =>
        {
            model.Id(p => p.UserID);
            model.Field(p => p.UserID).Editable(false);
        })
        .Read(read => read.Action("User_Read", "Users"))
        .Update(update => update.Action("User_Update", "Users"))
        .Create(create => create.Action("User_Create", "Users"))
        .Destroy(destroy => destroy.Action("User_Destroy", "Users"))
    )
)

<script type="text/javascript">
    function errorHandler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function() {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }
</script>
